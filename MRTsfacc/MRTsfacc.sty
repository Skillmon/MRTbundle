  {%
    \MRTsfacc@testknown{#5}
      {%
        \gdef\MRTsfacc@known{#5}%
        \global\@MRTsfacc@found@known@true
      }
      {%
        \MRTifTwoTokenTF{#5}
          {%
            \expandafter\MRTsfacc@mathaccentV@using\expandafter{\@firstoftwo#5}%
              {\@firstoftwo}
              {\@secondoftwo}%
          }
          {\@secondoftwo}%
          {#5}
          {\global\@MRTsfacc@found@known@false}%
